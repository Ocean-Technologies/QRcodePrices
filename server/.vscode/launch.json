{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "launch-qr-code-prices-server",
      "preLaunchTask": "start:docker",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app",
      "sourceMapPathOverrides": {
        "<WORKDIR>/*": "${workspaceRoot}/*"
      },
      "timeout": 30000,
      "smartStep": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}